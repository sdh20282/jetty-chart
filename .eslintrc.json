{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "xo",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "prettier/prettier": [
            "error",
            { "endOfLine": "auto", "tabWidth": 2, "useTabs": false, "printWidth": 150, "trailingComma": "none" }
        ],
        "react/jsx-one-expression-per-line": "off",
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "capitalized-comments": "off"
    }
}
